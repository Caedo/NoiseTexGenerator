<Window x:Class="ShaderTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShaderTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Image Name="renderImage" Source="{Binding Img}" Grid.Row="0">
            <Image.Effect >
                <local:NoiseEffect Scale="{Binding Value, ElementName=slider}"/>
            </Image.Effect>
        </Image>
        <Slider Name="slider" Minimum="1" Maximum="20" Grid.Row="1"/>
        <Button Grid.Row="2" Content="Save" Click="Button_Click"/>

    </Grid>
</Window>
